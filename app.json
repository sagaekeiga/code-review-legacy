{
  "name": "mergee",
  "scripts": {
    "postdeploy": "bundle exec rails db:migrate db:seed app:dev:sample"
  },
  "env": {
    "GITHUB_APP_PAYLOAD_ISS_ID": {
      "required": true
    },
    "GITHUB_APP_URL": {
      "required": true
    },
    "GITHUB_CLIENT_ID": {
      "required": true
    },
    "GITHUB_CLIENT_SECRET": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "PRIVATE_PEM": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "REDIS_URL": {
      "required": true
    },
    "REVIEW_APP": {
      "required": true,
      "value": "true"
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "SENDGRID_PASSWORD": {
      "required": true
    },
    "SENDGRID_USERNAME": {
      "required": true
    },
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    },
    "sidekiq": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    "heroku-postgresql",
    "heroku-redis",
    "scheduler",
    "sendgrid"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}