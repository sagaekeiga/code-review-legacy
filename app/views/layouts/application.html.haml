!!!
%html
  %head
    = render partial: 'meta'
    %title mergee
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = yield :javascript
  %body{ class: "#{controller_name}-#{action_name}" }
    .container
      - if reviewee_signed_in?
        = render 'reviewees_navbar'
      - elsif reviewer_signed_in?
        = render 'reviewers_navbar'
      - else
        = render 'navbar'
    .top-wrapper
      - if reviewee_signed_in?
        .reviewees
          .container-fluid.body-container
            .col-sm-12
              - !content_for?(:flash) && flash && flash.each do |key, message|
                .alert.m-b-1.m-b-0.p-t-2.r-0.b-l-0.b-r-0{ class: "alert-#{key}", role: 'alert' }
                  %strong= message
              = yield
      - elsif reviewer_signed_in?
        .reviewers
          - unless content_for?(:no_flash_msg_page)
            .container-fluid.body-container
              .col-sm-12
                - !content_for?(:flash) && flash && flash.each do |key, message|
                  .alert.m-b-1.m-b-0.p-t-2.r-0.b-l-0.b-r-0{ class: "alert-#{key}", role: 'alert' }
                    %strong= message
                = yield
          - else
            = yield
      - elsif admin_signed_in?
        .col-sm-12
          .container.admin
            - !content_for?(:flash) && flash && flash.each do |key, message|
              .alert.m-b-1.m-b-0.p-t-2.r-0.b-l-0.b-r-0{ class: "alert-#{key}", role: 'alert' }
                %strong= message
            = yield
      - else
        .container-fluid.top
          - unless controller_name == 'welcome'
            .container-fluid.body-container
              - !content_for?(:flash) && flash && flash.each do |key, message|
                .alert.m-b-1.m-b-0.p-t-2.r-0.b-l-0.b-r-0{ class: "alert-#{key}", role: 'alert' }
                  %strong= message
          = yield
    - unless content_for?(:no_footer_page)
      .footer
        .container-fluid
          .text-center
            = render 'footer'
