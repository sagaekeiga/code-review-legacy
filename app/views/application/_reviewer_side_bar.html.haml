.reviewer-side-wrapper
  .col-sm-1.col-lg-1.p-r-0.p-l-0
    %nav.navbar.navbar-fixed-side
    %ul.list-group.text-center
      %li.list-group-item
        = link_to reviewers_dashboard_path do
          %i.fas.fa-tachometer-alt{ class: is_same_action_name?('dashboard') }
          %br
          %small{ class: is_same_action_name?('dashboard') }= t('reviewers.dashboard.title')
      %hr
      %li.list-group-item
        = link_to reviewers_my_page_path do
          %i.fas.fa-user{ class: is_same_action_name?('my_page') }
          %br
          %small{ class: is_same_action_name?('my_page') }= t('reviewers.my_page.title')
      %hr
      %li.list-group-item
        = link_to destroy_reviewer_session_path, method: :delete do
          %i.fas.fa-sign-out-alt
          %br
          %small= t 'reviewers.dashboard.logout'
      %hr
