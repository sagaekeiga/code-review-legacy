.container.main
  .row
    .col
    .col-8
      - @pulls.each do |pull|
        .card.pull
          .card-body.text-dark
            %h5.card-title= link_to pull.title, pull.decorate.remote_url, target: '_blank'
            .user
              .avatar= image_tag pull.user.avatar_url, alt: '', height: '', width: '40', class: 'rounded-circle'
              .info
                .created_at= l pull.remote_created_at
                %b.name= pull.user.name
            .tags
              - pull.tags.each do |tag|
                %span.tag= tag.name
            .card-text.body= pull.body.gsub(/[\r\n]/, '').truncate(300)
            .reviewers
              .title レビュ-している人
              - pull.reviewer_avatar_urls.each do |reviewer_avatar_url|
                .reviewer= image_tag reviewer_avatar_url, alt: '', height: '', width: '30', class: 'rounded-circle'
          %hr
      = paginate @pulls
    .col