.reviewee-registration-new-wrapper
  .col-xs-6.col-xs-offset-3
    %h3.text-center
      %b Reviewee Sign Up
    %hr
    .panel.panel-default
      .panel-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name, html: { class: 'form-horizontal' })) do |f|
          = devise_error_messages!
          .form-group
            .input-group
              %span.input-group-addon
                %i.fas.fa-at
              = f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'E-mail'
          .form-group
            .input-group
              %span.input-group-addon
                %i.fas.fa-lock
              = f.password_field :password, class: 'form-control', placeholder: 'Password'
          .form-group
            .input-group
              %span.input-group-addon
                %i.fas.fa-check
              = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password(Confirm)'

          .form-group.text-center
            = f.submit t('helpers.links.sign_up'), class: 'btn btn-primary'
          .form-group.text-center
            = render 'reviewees/shared/links'
