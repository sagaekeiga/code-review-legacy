.col-xs-12
  .container
    .pull-list-wrapper
      .pull-title
        %span
          = @repo.name.truncate(40)
        %span.full_name
          = @repo.full_name.truncate(40)
        %i.fab.fa-github
      %table.table.table-hover.m-t-4
        %thead
          %tr.pull-list-header
            %th= t('.status')
            %th= t('.title')
            %th= t('.created')
            %th= t('.review_status')
        - @pulls.each_with_index do |pull, i|
          %tbody
            %tr.pull-list{ class: i % 2 == 0 ? 'add-light-blue' : '' }
              %td.add-success-color OPEN
              %td= link_to pull.title&.truncate(40), pull.decorate.remote_url, target: 'blank'
              %td= pull.remote_created_from
              %td
                .onoffswitch
                  %input.onoffswitch-checkbox.update-pull-button{ name: 'onoffswitch', type: 'checkbox', 'pull-id': pull.id, id: "reviewStatusSwitch#{pull.id}" }/
                  %label.onoffswitch-label{ for: "reviewStatusSwitch#{pull.id}" }
                    %span.onoffswitch-inner{ class: pull.request_reviewed? ? 'switch-off-inner' : '' }
                    %span.onoffswitch-switch{ class: pull.request_reviewed? ? 'switch-off' : '' }

= javascript_pack_tag 'update-resource'
