.col-xs-12
  .container
    .reviewee-dashboard-wrapper
      %h2
        %i.fab.fa-github
        = @reviewee.nickname
      = link_to ENV['GITHUB_APP_URL'], class: 'btn btn-outline-primary m-t-4', target: '_blank' do
        %i.fas.fa-plus-circle
        = t('.add_project')
      %table.table.table-hover.m-t-4
        %thead
          %tr.repo_list_header
            %th PROJECT
            %th STATUS
        - @reviewee.repos.each do |repo|
          %tbody
            %tr.repo_list
              %td= repo.name
              %td= repo.status_i18n
