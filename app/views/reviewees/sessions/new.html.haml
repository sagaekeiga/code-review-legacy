.reviewee-session-new-wrapper
  .col-md-6.col-xs-12.col-md-offset-3
    %h3.text-center
      %b ログイン
    %hr
    .panel.panel-default
      .panel-body
        = form_for(resource, as: resource_name, url: session_path(resource_name, html: { class: 'form-horizontal' })) do |f|
          .form-group
            .input-group
              %span.input-group-addon
                %i.fas.fa-at
              = f.email_field :email, autofocus: true, autocomplete: 'off', class: 'form-control', placeholder: t('helpers.links.email')
          .form-group
            .input-group
              %span.input-group-addon
                %i.fas.fa-lock
              = f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: t('helpers.links.password')
          - if devise_mapping.rememberable?
            .form-group
              = f.check_box :remember_me
              = f.label :remember_me
          .form-group.text-left
            = f.submit t('helpers.links.sign_in'), class: 'btn btn-primary'
          .form-group.text-left
            = render 'reviewees/shared/links'
