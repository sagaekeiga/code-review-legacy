.reviewee-session-new-wrapper
  .col-xs-8.col-xs-offset-2
    %h3.text-center
      %b Reviewee Sign In
    %hr
    .panel.panel-default
      .panel-body
        = form_for(resource, as: resource_name, url: session_path(resource_name, html: { class: 'form-horizontal' })) do |f|
          .form-group
            = f.label :email
            = f.email_field :email, autofocus: true, autocomplete: 'off', class: 'form-control'
          .form-group
            = f.label :password
            = f.password_field :password, autocomplete: 'off', class: 'form-control'
          - if devise_mapping.rememberable?
            .form-group
              = f.check_box :remember_me
              = f.label :remember_me
          .form-group.text-center
            = f.submit t('helpers.links.sign_in'), class: 'btn btn-primary'
          .form-group.text-center
            = render 'reviewees/shared/links'
