.col-xs-6.col-xs-offset-3
  %h2 Sign up
  %hr
  .panel.panel-default
    .panel-body
      = form_for(resource, as: resource_name, url: registration_path(resource_name, html: { class: 'form-horizontal' })) do |f|
        = devise_error_messages!
        .form-group
          .input-group
            %span.input-group-addon
              %i.fas.fa-at
            = f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('helpers.links.email')
        .form-group
          .input-group
            %span.input-group-addon
              %i.fas.fa-lock
            = f.password_field :password, class: 'form-control', placeholder: t('helpers.links.password')
        .form-group
          .input-group
            %span.input-group-addon
              %i.fas.fa-check
            = f.password_field :password_confirmation, class: 'form-control', placeholder: t('helpers.links.password_confirm')
        .form-group
          = f.check_box :agreement, as: :boolean, checked: false
          = link_to 'https://hackmd.ioagreement/s/BkrUv3BLQ' do
            = t('helpers.links.agreement')
          %span に同意する

        .form-group.text-left
          = f.submit '新規登録', class: 'btn btn-primary'
        .form-group.text-left
          = render 'reviewers/shared/links'
