.col-xs-12.p-r-0.p-l-0
  .container-fluid.p-r-0.p-l-0
    %nav.aside-left-nav
      = link_to :root, class: 'aside-item' do
        %i.fas.fa-tachometer-alt
        .title
          %small Dashboard
      = link_to :reviewers_pulls, class: 'aside-item current' do
        %i.fab.fa-hubspot
        .title
          %small Pulls
      = link_to '#', class: 'aside-item' do
        %i.fas.fa-cogs
        .title
          %small Settings
    %main.app-main
      %header.main-header
        .title
          %span.full_name
            %small= link_to @repo.full_name, [:reviewers, @repo]
      .app-domainant
        %aside.app-aside
          %nav.aside-left-menu
            .aside-activity
              %header
              %ul.projects
                %li
                  %p アサインするとコードレビューすることができます
                  = link_to 'アサインする', reviewers_pull_reviewer_pulls_path(@pull), method: :post, class: 'btn btn-block btn-primary'
        .main-display
          .above-main-content
            = render 'shared/flash'
            %h1.title= @pull.title
            .menu
              %ul.list-inline.text-left
                %li.list
                  = link_to [:reviewers, @repo, @pull], class: 'tab' do
                    .text-center
                      %small
                        %i.fas.fa-comments
                        Conversation
                %li.list
                  = link_to [:reviewers, @repo, @pull, :commits], class: 'tab' do
                    .text-center
                      %small
                        %i.fas.fa-align-justify
                        Commits
                %li.list
                  = link_to [:reviewers, @pull, :issues], class: 'tab' do
                    .text-center
                      %small
                        %i.fas.fa-file
                        Issues
                %li.list.active
                  = link_to [:reviewers, @repo, @pull, :changed_files], class: 'tab active' do
                    .text-center
                      %small
                        %i.fas.fa-code
                        Files Changed
          .main-body
            .dashboard
              .content-show-wrapper
                %h4= @content.path
                .panel.panel-default
                  .table-wrapper
                    %table
                      %thead
                        %tr
                          %th{ scope: 'col' }
                      - if @content.content
                        - decode_by_base64(@content.content)&.each_line&.with_index do |line, index|
                          %tbody
                            %tr
                              %td.index= index
                              %td.file-code= coderay(line, @content.path)