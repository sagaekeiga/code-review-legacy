.container
  .row
    .review
      .col-sm-8.col-sm-offset-2.workspace
        = render 'shared/flash_msg'
        = render 'progress_bar', pull: @pull, review: @review
        = render 'right_sidebar', repo: @pull.repo
        .m-t-10.m-b-4
          / code
          #codeTab.tab-content
            .page-header{ 'pull-id': @pull.id }
              %h1
                %strong= @pull.title
                %small
                  = link_to '修正する', edit_reviewers_pull_review_path(@pull, @review), class: 'btn btn-primary pull-right'
              %h3
                %span.label.label-default= @review.event_i18n
            .reviews-form-wrapper
              .reviews-form-card-wrapper
                = render @changed_files
            // コード全体へのレビュー
            %h4.m-t-10 全体へのコメント
            .panel
              .panel-body.gray-space
                = markdown(@review.body)
          = render 'reviewers/reviews/tab_contents', pull: @pull, commits: @commits, numbers: @numbers
= javascript_pack_tag 'issues'
= javascript_pack_tag 'review-tab'
