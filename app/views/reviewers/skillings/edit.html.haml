.skill-edit-wrapper
  .container
    .page-header
      %h2= title t('.title')
      %small.text-muted= t '.show_related_selected_skills'

    .row
      .col-xs-12
        = form_for(@reviewer, url: reviewers_skillings_path, html: { class: 'form-horizontal skillings-edit-wrapper' }) do |f|
          %p.text-left
            - [*'a'..'z'].each do |alphabet|
              .page-header= alphabet
              = f.collection_check_boxes(:skill_ids, Skill.top_match_by(alphabet), :id, :name) do |b|
                .checkbox-inline= b.label { b.check_box + b.text }

          .form-group.register-btn
            .col-xs-12.col-sm-4.col-sm-offset-4
              = f.submit t('helpers.links.sign_up'), class: 'btn btn-primary btn-block'
              %br
