.col-xs-12.p-r-0.p-l-0
  .container-fluid.p-r-0.p-l-0
    %nav.aside-left-nav
      = link_to :root, class: 'aside-item' do
        %i.fas.fa-tachometer-alt
        .title
          %small Dashboard
      = link_to :reviewers_pulls, class: 'aside-item current' do
        %i.fab.fa-hubspot
        .title
          %small Pulls
      = link_to :reviewers_reviews, class: 'aside-item' do
        %i.fas.fa-history
        .title
          %small Reviews
      = link_to '#', class: 'aside-item' do
        %i.fas.fa-cogs
        .title
          %small Settings
    %main.app-main
      %header.main-header
        .title
          %span.full_name
            %small
              = link_to @repo.full_name, [:reviewers, @repo]
      .app-domainant
        %aside.app-aside
          %nav.aside-left-menu
            .aside-activity
              %header
              %ul.projects
                %li= link_to 'リポジトリをダウンロード', reviewers_repo_download_path(@pull.repo, pull_token: @pull.token), method: :post, class: 'btn btn-block btn-primary'
          - if @pull.reviews.present?
            %table.table.table-hover
              %tbody
                %th ステータス
                %td
                  %span.label{ class: "label-#{@pull.reviews.last.decorate.label_color}" }= @pull.reviews.last.event_i18n
        .main-display
          .above-main-content
            %h1.title= @pull.title
            .menu
              %ul.list-inline.text-left
                %li.list
                  = link_to [:reviewers, @repo, @pull], class: 'tab' do
                    .text-center
                      %small
                        %i.fas.fa-comments
                        Conversation
                %li.list
                  = link_to [:reviewers, @repo, @pull, :commits], class: 'tab' do
                    .text-center
                      %small
                        %i.fas.fa-align-justify
                        Commits
                %li.list.active
                  = link_to [:reviewers, @pull, :issues], class: 'tab active' do
                    .text-center
                      %small
                        %i.fas.fa-file
                        Issues
                %li.list
                  = link_to file_reviewers_pull_reviews_path(@pull), class: 'tab' do
                    .text-center
                      %small
                        %i.fas.fa-code
                        Files Changed
          .main-body
            .dashboard
              .col-sm-8.p-l-0.conversation
                .body
                  - @issues.each do |issue|
                    %h4
                      = issue.title
                      %span.text-muted
                        = issue.number
                    .panel.panel-default
                      .panel-body
                        .md-wrapper
                          - if issue.body.present?
                            = markdown(issue.body)
                          - else
                            .text-muted No description provided.
= javascript_pack_tag 'reply'
