.reviewers-shared-repos-tab-wrapper
  %ul.nav.nav-tabs.nav-justified
    // Repository
    %li{ class: is_same_controller_name?('contents') }
      = link_to '#', class: 'nav-link' do
        %i.fas.fa-code
        &nbsp;
        %b= t 'reviewers.pulls.show.code'
    // Issues
    %li{ class: is_same_controller_name?('issues') }
      = link_to reviewers_repo_issues_path(repo), class: 'nav-link' do
        %i.fas.fa-exclamation-circle
        &nbsp;
        %b= t 'reviewers.pulls.show.issue'
    // Pullrequests
    %li{ class: is_same_controller_name?('pulls') }
      = link_to '#', class: 'nav-link' do
        %i.fas.fa-exclamation-circle
        &nbsp;
        %b= t 'reviewers.pulls.show.issue'