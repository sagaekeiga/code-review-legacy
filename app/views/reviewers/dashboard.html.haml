.col-xs-12.p-r-0.p-l-0
  .container-fluid.p-r-0.p-l-0
    %nav.aside-left-nav
      = link_to :root, class: 'aside-item current' do
        %i.fas.fa-tachometer-alt
        .title
          %small Dashboard
      = link_to :reviewers_pulls, class: 'aside-item' do
        %i.fab.fa-hubspot
        .title
          %small Pulls
      = link_to '#', class: 'aside-item' do
        %i.fas.fa-cogs
        .title
          %small Settings
    %main.app-main
      %header.main-header
        .title
          %span.full_name アサインしているプロジェクトのプルリクエスト
      .app-domainant
        %table.table.table-hover
          %thead
            %tr.pull-list-header
              %th= t('.pr_title')
              %th= t('.repo_title')
              %th= t('.created')
              %th= t('.tag')
          %tbody
            - @pulls.each_with_index do |pull, i|
              %tr.pull-list
                %td= link_to pull.title&.truncate(20), [:reviewers, pull], class: 'pull-title'
                %td= link_to pull.repo.decorate.name_including_orgs, [:reviewers, pull.repo], class: 'repo-path'
                %td= date_format(pull.remote_created_at)
                %td
                  - pull.tags.each do |tag|
                    %span.label.label-warning= tag.name
= javascript_pack_tag 'update-resource'
