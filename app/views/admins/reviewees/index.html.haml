.container-fluid
  .row
    .col-sm-3
      = render 'admins/shared/side_nav'
    .col-sm-9
      .page-header
        %h4= t('admins.reviewees.index.title')
      %table.table.table-hover.pulls-on-dashboard-wrapper.text-center
        %thead
          %tr
            %th= t 'activerecord.attributes.reviewer/github.avatar_url'
            %th= t 'activerecord.attributes.reviewer/github.email'
            %th
        %tbody
          - @reviewees.each do |reviewee|
            %tr
              %td
                - if reviewee.github_account&.avatar_url
                  = image_tag reviewee.github_account&.avatar_url, class: 'img-responsive center-block', style: 'width: 50px;'
                - else
                  Ã—
              %td= reviewee.github_account&.email
              %td.text-center= link_to t('helpers.links.confirm'), [:admins, reviewee]
