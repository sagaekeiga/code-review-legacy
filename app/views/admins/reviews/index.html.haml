.row
  .col-sm-3
    = render 'admins/shared/side_nav'
  .col-sm-9
    .page-header
      %h4= t '.title'
    %table.table.table-hover.pulls-on-dashboard-wrapper.text-center
      %thead
        %tr
          %th= t 'activerecord.attributes.review.id'
          %th= t 'activerecord.attributes.review.body'
          %th= t 'activerecord.attributes.review.working_hours'
          %th
      %tbody
        - @pending_reviews.each do |pending_review|
          %tr
            %td= pending_review.id
            %td= pending_review.body&.truncate(55)
            %td= pending_review.working_hours
            %td= link_to '詳細', [:admins, pending_review]
